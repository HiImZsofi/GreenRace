<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vehicleType"
        android:textSize="20sp"/>

    <Spinner
        android:id="@+id/vehicleTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:contentDescription="@string/vehicleType"
        android:minHeight="48dp"
        android:tooltipText="Jármű típusa"
        android:layout_marginBottom="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vehicleNumber"
        android:textSize="20sp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:minHeight="48dp"
        android:tooltipText="Járat szám"
        android:contentDescription="@string/vehicleNumber"
        android:id="@+id/lineNumberSpinner"
        android:layout_marginBottom="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startingStop"
        android:textSize="20sp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:minHeight="48dp"
        android:tooltipText="Induló megálló"
        android:contentDescription="@string/startingStop"
        android:id="@+id/getOnStopSpinner"
        android:layout_marginBottom="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/endingStop"
        android:textSize="20sp"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:minHeight="48dp"
        android:tooltipText="Leszállás megálló"
        android:contentDescription="@string/endingStop"
        android:id="@+id/getOffStopSpinner"
        android:layout_marginBottom="35dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/logRouteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/green_700"
            android:text="@string/addRoute"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

    <Button
        android:id="@+id/logRouteRedirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:textColor="@color/green_700"
        tools:ignore="TextContrastCheck" />
</androidx.appcompat.widget.LinearLayoutCompat>