<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPageFragment">

    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/ponts_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 Zöldpont-od van"
        android:textSize="30dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/emission_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="Ez 0g szennyezésnek felel meg"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Elért eredmények:"
        android:textColor="@color/black"
        android:textSize="25dp" />
    <ListView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/achievementList"
        tools:listitem="@layout/achievement_list_item"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Legutóbbi 10 utad:"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/user_barChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"/>

</LinearLayout>