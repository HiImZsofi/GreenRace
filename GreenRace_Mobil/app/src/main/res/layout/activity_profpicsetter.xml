<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroundright"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:gravity="center_vertical"
    android:id="@+id/myView">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center_vertical"
        app:cardBackgroundColor="@color/darkCardColor"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profpicHeader"
                style="@style/parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="Profilkép Beállítás"
                android:textAlignment="center"
                android:textColor="@color/whiteTextColor"
                android:textSize="30sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:text="<"
                android:textSize="50dp"
                android:background="@android:color/transparent"
                android:layout_marginEnd="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="250dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/profilepic"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/npic"
                    android:scaleType="centerCrop"
                    android:contentDescription="Profilkép" />
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/next"
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:text=">"
                android:textSize="50dp"
                android:background="@android:color/transparent"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/profpicBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_gravity="start"
                android:textColor="@color/teal_700"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:clickable="true"
                android:focusable="true" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/profpicConfirmButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="170dp"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_item"
                android:text="Kiválasztás"
                android:textAllCaps="false"
                android:textColor="@color/whiteTextColor"
                />
        </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>