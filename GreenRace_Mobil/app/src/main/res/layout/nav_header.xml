<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="bottom"
    android:id="@+id/navHeader">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <androidx.cardview.widget.CardView
            android:layout_marginStart="20dp"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cardCornerRadius="250dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/nav_profilepic"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/npic"
                android:scaleType="centerCrop"
                android:contentDescription="Profilkép" />
        </androidx.cardview.widget.CardView>
    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Bezárás"
        android:minHeight="48dp"
        android:onClick="openCloseDrawer"
        android:src="@drawable/ic_close"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/nav_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="username_placeholder"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/nav_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="email_placeholder"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B1B1B1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

</LinearLayout>